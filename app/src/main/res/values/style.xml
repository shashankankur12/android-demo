<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="loginEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10ssp</item>
        <item name="android:paddingBottom">@dimen/_10ssp</item>
        <item name="android:paddingEnd">@dimen/_14ssp</item>
        <item name="android:paddingStart">@dimen/_14ssp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="baseButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="positiveRoundButtonTheme" parent="baseButtonTheme">
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>
</resources>